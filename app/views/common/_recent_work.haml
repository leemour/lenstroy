=link_to '#', 'data-toggle' => 'modal', 'data-target' => "#modal-#{name}" do
  =image_tag "#{name}-sm.jpg", class: 'img-thumbnail', alt: alt_text
.modal.fade{id: "modal-#{name}", 'aria-hidden' => "true",  tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: "button", 'data-dismiss' => "modal", 'aria-hidden' => true}
          &times;
        %h4.modal-title= alt_text
      .modal-body
        = image_tag "#{name}.jpg", alt: alt_text
