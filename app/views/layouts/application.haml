!!! 5
%html{lang: 'ru'}
  %head
    %meta{ charset: 'utf-8'}/
    %meta{'http-equiv' => "X-UA-Compatible", content: "IE=edge"}/
    %meta{ name: 'viewport',    content: 'width=device-width,initial-scale=1'}/
    %meta{ name: 'description', content: @page.seo_desc }/
    %meta{ name: 'keywords',    content: @page.seo_keys }/
    %title= full_title(@page)
    =favicon_tag 'favicon.ico'
    %link{href: '//webfonts.ru/import/clearsans.css', rel: :stylesheet}
    =stylesheet_link_tag 'application'
    =stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css"
    /[if lt IE 9]
      %script{ src: '//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js' }
      %script{ src: "//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"}

  %body{class: body_class(@page)}

    = partial 'layouts/header'

    %main#content{role: 'main'}
      .container-fluid
        .row
          %article.col-sm-8.col-lg-9
            = flash_messages

            = render_navigation(renderer: :bootstrap_breadcrumbs)

            = yield

            = social_buttons

          %aside#sidebar.col-sm-4.col-lg-3
            = partial "layouts/sidebar"

    %footer
      = partial 'layouts/footer'

    =javascript_include_tag "http://code.jquery.com/jquery-latest#{min}.js"
    :javascript
      window.jQuery || document.write('<script src="javascripts/jquery.js">\/script>')
    =javascript_include_tag 'jquery-ujs', 'application'
    =javascript_include_tag '//yandex.st/share/share.js'

    = partial 'common/yandex_metrika'

    / Start SiteHeart code
    :javascript
      (function(){
        var widget_id = 728835;
        _shcp =[{widget_id : widget_id}];
        var lang =(navigator.language || navigator.systemLanguage
          || navigator.userLanguage ||"en")
        .substr(0,2).toLowerCase();
        var url ="widget.siteheart.com/widget/sh/"+ widget_id +"/"+ lang +"/widget.js";
        var hcc = document.createElement("script");
        hcc.type ="text/javascript";
        hcc.async =true;
        hcc.src =("https:"== document.location.protocol ?"https":"http")
