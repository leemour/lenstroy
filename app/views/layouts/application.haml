!!! 5
%html{:lang => 'ru'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => :viewport, :content => 'width=device-width,initial-scale=1'}
    %meta{ name: 'description', content: @page.seo_desc }/
    %meta{ name: 'keywords', content: @page.seo_keys }/
    %title= full_title(@page)
    =favicon_tag 'favicon.ico'
    %link{:href => 'http://fonts.googleapis.com/css?family=Varela', :rel => :stylesheet}
    =stylesheet_link_tag 'application'
    / =stylesheet_link_tag "screen.css", media: "screen, projection"
    / =stylesheet_link_tag "print.css", media: "print"

    /[if lt IE 9]
      %script{ :src => '//html5shiv.googlecode.com/svn/trunk/html5.js' }


  %body

    = partial 'layouts/header'

    %main#content{ role: 'main'}
      .container-fluid
        .row-fluid
          %div.main.span8
            = [:error, :warning, :success, :notice].map { |type| flash_tag(type, :class => "alert alert-#{type} fade in", :bootstrap => true) }.join.html_safe


            %article= yield


          = partial 'layouts/sidebar'


    = partial 'layouts/footer'


    =javascript_include_tag 'application', 'bootstrap'
    / =javascript_include_tag 'jquery-1.9.0.min', (Padrino.env == :production ? 'bootstrap.min' : 'bootstrap')
